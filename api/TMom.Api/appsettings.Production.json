{
  "MainDB": "MainDB", //当前项目的主库，所对应的连接字符串的Enabled必须为true
  "MutiDBEnabled": true, //是否开启多库模式
  "CQRSEnabled": false, //是否开启读写分离模式,必须是单库模式，且数据库类型一致，比如都是SqlServer
  "SnowWorkId": 20, // 部署时，每个节点都要改成不同的值，防止重复, 取值范围 1-30
  "DBS": [
    /*
    对应下边的 DBType
    MySql = 0,
    SqlServer = 1,
    Sqlite = 2,
    Oracle = 3,
    PostgreSQL = 4,
    Dm = 5,//达梦
    Kdbndp = 6,//人大金仓
  */
    {
      "ConnId": "MainDB",
      "DBType": 0,
      "Enabled": true,
      "HitRate": 40,
      "Connection": "server=xxx;port=3306;database=xxx;uid=root;pwd=xx;AllowUserVariables=true"
    },
    {
      "ConnId": "Dev_SqlServer",
      "DBType": 1,
      "Enabled": false,
      "HitRate": 40,
      "Connection": "Data Source=xxx;Initial Catalog=xx;User=sa;Password=xxx;MultipleActiveResultSets=True",
      "ProviderName": "System.Data.SqlClient"
    }
  ]
}